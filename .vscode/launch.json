    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'renderer'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=renderer"
                ],
                "filter": {
                    "name": "renderer",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'neoclock'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=neoclock",
                    "--package=neoclock"
                ],
                "filter": {
                    "name": "neoclock",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Remote debug on pz2",
            "type": "lldb",
            "request": "custom",
            "targetCreateCommands": ["target create ${workspaceFolder}/target/armv7-unknown-linux-gnueabihf/debug/neoclock"],
            "processCreateCommands": ["gdb-remote pz2:7777"],
            "preLaunchTask": "Start GDB server"
        }
    ]
}